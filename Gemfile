source 'https://rubygems.org'

ruby '2.3.1'

gem 'rails', '4.2.4'

# Backend
gem 'unicorn'

# Various
gem 'jbuilder', '~> 2.0'

# Javascript
gem 'coffee-rails', '~> 4.0.0'
gem 'turbolinks'
gem 'jquery-rails'
gem 'uglifier', '>= 1.3.0'

# HTML / CSS
gem 'sass-rails', '~> 4.0.3'
gem "compass-rails"
gem 'font-awesome-rails', '~> 4'

# Helper
gem 'active_link_to'
gem 'gravtastic'

# Markdown
gem 'rdiscount'

# Environments
group :production do
  gem 'rails_12factor'
end

group :development, :test do
  gem 'spring'
  gem 'capybara'
end

group :doc do
  gem 'sdoc', require: false
end

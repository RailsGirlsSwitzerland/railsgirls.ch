# Backend
gem 'unicorn'

# Various
gem 'jbuilder', '~> 2.0'

# Javascript
gem 'coffee-rails', '~> 4.0.0'
gem 'turbolinks'
gem 'jquery-rails'
gem 'uglifier', '>= 1.3.0'

# HTML / CSS
gem 'sass-rails', '~> 4.0.3'
gem "compass-rails", "~> 1.1.2"
